<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:id="@+id/linearLayout">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#050505" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:layout_width="130dp"
            android:layout_height="130dp" android:id="@+id/red_square"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintDimensionRatio="1"
            android:background="#F91414"/>
    <TextView
            android:layout_width="53dp"
            android:layout_height="49dp"
            android:id="@+id/textView6"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:background="#0A0AFF" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintEnd_toEndOf="@+id/textView8"
    />
    <TextView
            android:text=""
            android:layout_width="53dp"
            android:layout_height="58dp"
            android:id="@+id/textView7" app:layout_constraintEnd_toStartOf="@+id/red_square"
            android:layout_marginEnd="8dp" app:layout_constraintTop_toTopOf="parent"
            android:background="#F5F2F2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.75"
            app:layout_constraintBottom_toTopOf="@+id/background" android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:layout_width="52dp"
            android:layout_height="62dp" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/textView8"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:layout_constraintBottom_toBottomOf="@+id/red_square" android:background="#F5F2F2"
            app:layout_constraintEnd_toEndOf="@+id/textView7"/>
    <TextView
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:id="@+id/textView9" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/red_square" app:layout_constraintStart_toStartOf="@+id/red_square"
            app:layout_constraintBottom_toBottomOf="@+id/background" app:layout_constraintVertical_bias="0.0"
            android:background="#F5F2F2"/>
    <TextView
            android:layout_width="38dp"
            android:layout_height="20dp"
            android:id="@+id/textView10" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView9"
            app:layout_constraintStart_toEndOf="@+id/textView9" android:layout_marginStart="8dp"
            android:background="#F5F2F2"/>
    <TextView
            android:layout_width="44dp"
            android:layout_height="24dp"
            android:id="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/textView10" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="1.0"
            android:layout_marginTop="8dp" android:background="#FFEB3B"/>
</androidx.constraintlayout.widget.ConstraintLayout>